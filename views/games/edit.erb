<form action="/games/<%= @select_game[:id] %>" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control"  placeholder="Title" name="title" value="<%= @select_game[:title] %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Year</label>
    <input type="text" class="form-control"  placeholder="Year" name="year" value="<%= @select_game[:year] %>">
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Developer</label>
    <input type="text" class="form-control" placeholder="Developer" name="dev" value="<%= @select_game[:dev] %>">
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Image Url</label>
    <input type="text" class="form-control" placeholder="Image Dev" name="image" value="<%= @select_game[:image] %>">
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Description</label>
    <input type="text" class="form-control" placeholder="Description" name="description" value="<%= @select_game[:description] %>">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  <% if (@select_game[:id] !='') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
