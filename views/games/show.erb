<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-md-offset-3">
      <h1 class="text-center">Show page for <%= @select_game[:title] %></h1>
    </div>
    <div class="row">
      <div class="col-md-offset-5 col-md-2 col-md-offset-5">
        <img class="text-center" src="<%= @select_game[:image] %>" alt="Game_Cover">
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <h3 class="text-center">Year Released: <%= @select_game[:year] %></h3>
      </div>
      <div class="col-md-offset-6 col-md-3">
        <h3 class="text-center">Developer: <%= @select_game[:dev] %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-2 col-md-8 col-md-offset-2">
        <h4><%= @select_game[:description] %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-4 col-md-2">
        <a href="/games/<%= @select_game[:id] %>/edit" class="btn btn-default">Edit</a>
      </div>
      <div class="col-md-offset-1 col-md-2 col-md-offset-3">
        <form class="" action="/games/<%= @select_game[:id] %>" method="post">
          <button type="submit" class="btn btn-default">Delete</button>
          <input type="hidden" name="_method" value="DELETE">
        </form>
      </div>
    </div>
  </div>
</div>
